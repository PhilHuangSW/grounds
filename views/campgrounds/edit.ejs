<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="mx-auto">Edit Campground</h1>
  <div class="col-md-6 offset-3">
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" novalidate class="validated-form"
      enctype="multipart/form-data">


      <!-- TITLE -->
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="campground[title]" value="<%= campground.title %>"
          required>
        <div class="invalid-feedback">
          Cannot be empty!
        </div>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>



      <!-- LOCATION -->
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="campground[location]"
          value="<%= campground.location %>" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>


      <!-- PRICE -->
      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price">$</span>
          <input type="number" step="0.01" id="price" name="campground[price]" class="form-control" placeholder="0.00"
            aria-label="price" aria-describedby="price-label" value="<%= campground.price %>" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
      </div>



      <!-- DESCRIPTION -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="campground[description]" class="form-control"
          required><%= campground.description %></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>




      <!-- IMAGE URL -->
      <div class="mb-3">
        <label for="">Upload image(s)</label>
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="images" name="images" multiple>
          <label class="custom-file-label" for="images">Add image(s)...</label>
        </div>
      </div>

      <!-- DISPLAYING ALL IMAGES FOR THAT CAMPGROUND -->
      <div class="mb-3">
        <% campground.images.forEach(function(img, i) { %>
        <img src="<%=img.thumbnail%>" alt="<%= img.filename %>" class="img-thumbnail">

        <div class="form-check-inline">
          <input type="checkbox" name="deleteImages[]" id="image-<%=i%>" value="<%=img.filename%>">
        </div>
        <label for="image-<%=i%>">Delete?</label>

        <% }) %>
      </div>

      <!-- BUTTON TO SUBMIT FORM -->
      <div class=" mb-3">
        <button class="btn btn-success">Update Campground</button>
      </div>
    </form>

    <!-- LINK TO GO BACK TO THE SPECIFIC CAMPGROUND -->
    <a href="/campgrounds/<%= campground._id %>">Back</a>
    <!-- LINK BACK TO ALL CAMPGROUNDS -->
    <a href="/campgrounds">All Campgrounds</a>
  </div>

</div>