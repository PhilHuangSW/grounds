<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="mx-auto">New Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">


      <!-- TITLE -->
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="campground[title]" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>


      <!-- LOCATION -->
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="campground[location]" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>


      <!-- PRICE -->
      <div class="mb-3">
        <label for="price" class="form-label">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price">$</span>
          <input type="number" step="0.01" id="price" name="campground[price]" class="form-control" placeholder="0.00"
            aria-label="price" aria-describedby="price-label" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
      </div>


      <!-- DESCRIPTION -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="campground[description]" class="form-control" required></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>



      <!-- IMAGE URL -->
      <div class="mb-3">
        <label for="">Upload Images</label>
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="images" name="images" multiple>
          <label class="custom-file-label" for="images">Choose image(s)...</label>
        </div>
      </div>
      <!-- <div class="mb-3">
          <label class="form-label" for="images">Upload Image(s)</label>
          <br>
          <input type="file" name="images" id="images" multiple>
        </div> -->
      <!-- <div class="mb-3">
          <label for="image" class="form-label">Image URL</label>
          <input type="text" class="form-control" id="image" name="campground[image]" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div> -->

      <!-- BUTTON TO SUBMIT FORM -->
      <div class="mb-3">
        <button class="btn btn-success">Add Campground</button>
      </div>
    </form>

    <!-- LINK BACK TO ALL CAMPGROUNDS -->
    <a href="/campgrounds">All Campgrounds</a>
  </div>

</div>